import tkinter as tk 
def saludar(): 
    nombre = entrada_nombre.get() 
    a単os = entrada_a単os.get()
    etiqueta_resultado.config(text=f"Hola que tal {nombre}, tienes {a単os} a単os GRACIAS") 
ventana = tk.Tk() 
ventana.title("ana version") 
ventana.geometry("450x200") 

etiqueta = tk.Label(ventana, text="por favor Ingresa tu nombre:") 
etiqueta.pack() 

entrada = tk.Entry(ventana) 
entrada.pack() 
etiqueta_edad = tk.Label(ventana, text="por favor ingresa tu edad:")

boton = tk.Button(ventana, text="toca para ver el saludo saludo", command=saludar) 
boton.pack() 

etiqueta_resultado = tk.Label(ventana, text="") 
etiqueta_resultado.pack() 

ventana.mainloop()
